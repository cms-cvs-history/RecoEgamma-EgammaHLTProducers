############### generate CTF track candidates ############
module l1NonIsoEgammaRegionalCkfTrackCandidates = ckfTrackCandidates from "RecoTracker/CkfPattern/data/CkfTrackCandidates.cfi"
#bool   seedCleaning         = false
replace l1NonIsoEgammaRegionalCkfTrackCandidates.SeedProducer   = "l1NonIsoEgammaRegionalPixelSeedGenerator"
replace l1NonIsoEgammaRegionalCkfTrackCandidates.SeedLabel      = ""
replace l1NonIsoEgammaRegionalCkfTrackCandidates.TrajectoryBuilder     = "CkfTrajectoryBuilder"
replace l1NonIsoEgammaRegionalCkfTrackCandidates.TrajectoryCleaner     = "TrajectoryCleanerBySharedHits"
## set it as "none" to avoid redundant seed cleaner
replace l1NonIsoEgammaRegionalCkfTrackCandidates.RedundantSeedCleaner  = "CachingSeedCleanerBySharedInput"
#replace l1NonIsoEgammaRegionalCkfTrackCandidates.RedundantSeedCleaner  = "none"
replace l1NonIsoEgammaRegionalCkfTrackCandidates.NavigationSchool      = "SimpleNavigationSchool"
